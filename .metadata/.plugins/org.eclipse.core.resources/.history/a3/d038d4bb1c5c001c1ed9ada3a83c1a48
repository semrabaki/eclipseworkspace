package Questions;

import java.util.Scanner;

public class PYRAMIS {

	public static void main(String[] args) {
	
		int h=5;
		
		for(int i=1; i<=h; i++)
		{
			for(int j=0; j<h-i; j++)
			{
				System.out.println(" ");
			}
			for(int k=0; k<i+i+1; k++)
			{
				System.out.println("*");
			}
			 System.out.println();
		}
		
	

	}

}
