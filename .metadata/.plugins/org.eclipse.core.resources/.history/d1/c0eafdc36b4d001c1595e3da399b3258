package day33maps;

import java.util.Scanner;

/*
    Ask user to enter the number of lines of a pyramide.
 Type a program to create the pyramide.
 For example if the number of lines is 5, the pyramide will be like;            * 
																		      * * * 
																		    * * * * * 
																		  * * * * * * * 
																		* * * * * * * * *
*/

public class InterviewQuestion02 {

	public static void main(String[] args) {
		
		
		Scanner scan= new Scanner(System.in);
		System.out.println("Enter the lines of a pyramide");
	int number=scan.nextInt();
		
		for (int i = 0; i < number; i++) 
		{ 
			for (int j = 0; j < number - i; j++) 
			{
				System.out.print(" ");
			}
			for (int k = 0; k <= i; k++)
			{
				System.out.print("* ");
			} 
			System.out.println();
		}

	//	Read more: https://www.java67.com/2015/10/how-to-print-pyramid-pattern-in-java-example.html#ixzz7DAj7KOSQ
	
	}

}
