package Questions;

import java.util.Scanner;

public class PYRAMIS {

	public static void main(String[] args) {
	
		Scanner scan= new Scanner(System.in);
		
		int row= scan.nextInt();
		
		for(int i=1; i<=row; i++)
		{
			for( int j=row-1; j>0; j--)
			{
				System.out.print(" ");
			}
			System.out.print("*");
		}

	}

}
